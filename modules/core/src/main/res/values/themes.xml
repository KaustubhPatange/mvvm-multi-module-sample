<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MVVMNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="chipStyle">@style/CustomChipStyle</item>

        <item name="android:statusBarColor" tools:targetApi="m">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinHeight">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="chipStartPadding">15dp</item>
        <item name="chipEndPadding">15dp</item>
    </style>
</resources>